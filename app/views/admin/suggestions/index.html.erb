<h2><%= t "suggestions.list" %></h2>
<table id="table_list">
  <thead>
    <tr>
      <th><%= t "suggestions.id" %></th>
      <th><%= t "suggestions.username" %></th>
      <th><%= t "suggestions.name" %></th>
      <th><%= t "suggestions.description" %></th>
      <th><%= t "suggestions.price" %></th>
      <th><%= t "suggestions.message" %></th>
      <th><%= t "suggestions.status" %></th>
      <th><%= t "suggestions.actions" %></th>
      <th><%= t "suggestions.image" %></th>
    </tr>
  </thead>
  <tbody>
    <% @suggestions.each_with_index do |suggestion, index| %>
      <%= render "suggestion", object: suggestion, index: index %>
    <% end %>
  </tbody>
</table>

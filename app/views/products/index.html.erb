<% provide :title, t("word_show_title") %>
  <div class="search-form">
  </div>
  <table class="table table-striped table-bordered table-hover" id="products">
    <thead>
      <tr>
        <th><%= t "product_table_name" %></th>
        <th><%= t "product_table_description" %></th>
        <th><%= t "product_table_type" %></th>
        <th><%= t "product_table_rating" %></th>
        <th><%= t "product_table_price" %></th>
        <th><%= t "product_table_category" %></th>
      </tr>
    </thead>
  <tbody>
  <% if @products.any? %>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.description %></td>
        <td>
          <% if product.is_food %>
            <%= "food" %>
          <% else %>
            <%= "drink" %>
          <% end %>
        </td>
        <td><%= product.rating %></td>
        <td><%= product.price %></td>
        <td><%= product.category.name %></td>
      </tr>
    <% end %>
  <% end %>
  </tbody>
</table>
